---
layout: layouts/blog.njk
pagination:
    data: collections
    size: 1
    alias: tag
    filter:
        - all
permalink: /blog/tags/{{ tag | slug }}/
---
<div class="max-w-5xl m-auto space-y-5 py-5 px-2" >

    {% if tag != "posts" %}
    <h1 class="text-4xl">Posts tagged as: “{{ tag }}”</h1>
    {% endif %}

    {% set taglist = collections[ tag ] %}
    {% for post in taglist | reverse %}

    <hr class="border-1 border-my-darkgray">

    <div class="flex mx-auto flex-row">
        <img class="shadow-my-yellow border-b-2 border-r-2 border-my-darkgray object-cover h-32 w-44 mx-6 sm:inline-block hidden" src="{{ post.data.thumbnail }}" alt="">
        <div class="flex flex-col justify-between">
            <div>
                <h2 class="text-4xl">{{ post.data.title }}</h2>
                <p>15 Jun 2022</p>
                <div>
                    Tags: 
                    {% for tag in post.data.tags | filterTags -%}
                    <a class="font-sharetech hover:bg-my-yellow transition duration-200" href="/blog/tags/{{ tag | slugify }}/">[{{ tag }}]</a> 
                    {% endfor %}
                </div>
            </div>
            <div><a href="{{ post.url }}" class="underline underline-offset-2 decoration-my-darkgray decoration-2 hover:bg-my-yellow transition duration-200">Read more</a></div>
        </div>
    </div>

    {% endfor %}

    <hr class="border-1 border-my-darkgray">

</div>